#:import utils kivy.utils

<MyLayout>
    size_hint: [.9, .9]
    pos_hint: {'top': .95, 'right': .95}

    canvas.before:
        Rectangle:
            size: self.size
            pos: self.pos

    # this is a relaive layout
    CanvasWidget:
        size: self.size
        canvas:
            Color:
                rgba: (0.9, 0.0, 0.0, 1)
                

